    <style name="NoTitleDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MySpinnerDateTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/pointColor</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@color/white</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/pointColor</item>
        <item name="colorControlHighlight">@color/pointColor</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/pointColor</item>
    </style>
